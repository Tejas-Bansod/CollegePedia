<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
  
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-6 max-w-5xl">
    <h1 class="text-3xl font-bold mb-6">Approve College Information</h1>
    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <%= error %>
      </div>
    <% } %>
    <div class="bg-white p-6 rounded shadow-md">
      <!-- College Name -->
      <h2 class="text-2xl font-semibold mb-4"><%= information.clg_name %></h2>
      <% if (information.clg_heading) { %>
        <h3 class="text-lg text-gray-700 mb-4"><%= information.clg_heading %></h3>
      <% } %>
      
      <!-- Images -->
      <% if (information.clg_images_paths && information.clg_images_paths.length > 0) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Campus Images</h4>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% information.clg_images_paths.forEach(path => { %>
              <img src="<%= path %>" alt="Campus Image" class="w-full h-48 object-cover rounded" loading="lazy">
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Additional Info -->
      <% if (information.clg_info1 || information.clg_info2 || information.clg_info3) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">About</h4>
          <% if (information.clg_info1) { %>
            <p class="text-gray-700 mb-2"><%= information.clg_info1 %></p>
          <% } %>
          <% if (information.clg_info2) { %>
            <p class="text-gray-700 mb-2"><%= information.clg_info2 %></p>
          <% } %>
          <% if (information.clg_info3) { %>
            <p class="text-gray-700"><%= information.clg_info3 %></p>
          <% } %>
        </div>
      <% } %>

      <!-- Courses -->
      <% if (information.clg_courses && information.clg_courses.length > 0) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Courses Offered</h4>
          <ul class="list-disc pl-5">
            <% information.clg_courses.forEach(course => { %>
              <li class="text-gray-700">
                <strong><%= course.courses %></strong>: <%= course.syllabus %>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <!-- Departments -->
      <% if (information.clg_departments && information.clg_departments.length > 0) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Departments</h4>
          <ul class="list-disc pl-5">
            <% information.clg_departments.forEach(dept => { %>
              <li class="text-gray-700"><%= dept %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <!-- Rating -->
      <% if (information.clg_rating) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Rating</h4>
          <p class="text-gray-700"><%= information.clg_rating %> / 5</p>
        </div>
      <% } %>

      <!-- Accommodations -->
      <% if (information.clg_acmts && information.clg_acmts.length > 0) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Accommodations</h4>
          <ul class="list-disc pl-5">
            <% information.clg_acmts.forEach(acmt => { %>
              <li class="text-gray-700"><%= acmt %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <!-- Accommodation Images -->
      <% if (information.clg_acmts_img_paths && information.clg_acmts_img_paths.length > 0) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Accommodation Images</h4>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% information.clg_acmts_img_paths.forEach(path => { %>
              <img src="<%= path %>" alt="Accommodation Image" class="w-full h-48 object-cover rounded" loading="lazy">
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- Contact -->
      <% if (information.clg_contact || information.clg_email) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Contact Information</h4>
          <% if (information.clg_contact) { %>
            <p class="text-gray-700">Phone: <%= information.clg_contact %></p>
          <% } %>
          <% if (information.clg_email) { %>
            <p class="text-gray-700">Email: <%= information.clg_email %></p>
          <% } %>
        </div>
      <% } %>

      <!-- Address -->
      <% if (information.clg_address || information.clg_address_url) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Address</h4>
          <% if (information.clg_address) { %>
            <p class="text-gray-700">
              <%= information.clg_address.address ? information.clg_address.address + ', ' : '' %>
              <%= information.clg_address.city ? information.clg_address.city + ', ' : '' %>
              <%= information.clg_address.state ? information.clg_address.state + ', ' : '' %>
              <%= information.clg_address.country ? information.clg_address.country : '' %>
              <%= information.clg_address.pincode ? ' - ' + information.clg_address.pincode : '' %>
            </p>
          <% } %>
          <% if (information.clg_address_url) { %>
            <p class="text-gray-700">
              <a href="<%= information.clg_address_url %>" target="_blank" class="text-indigo-600 hover:underline">View on Map</a>
            </p>
          <% } %>
        </div>
      <% } %>

      <!-- Year Established -->
      <% if (information.clg_since) { %>
        <div class="mb-6">
          <h4 class="text-md font-semibold mb-2">Established</h4>
          <p class="text-gray-700"><%= information.clg_since %></p>
        </div>
      <% } %>

      <!-- Approval Form -->
      <form action="/api/information/approve/<%= information.info_id %>" method="POST" class="mt-6">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">Approval Status <span class="text-red-500">*</span></label>
          <div class="mt-2">
            <label class="inline-flex items-center">
              <input type="radio" name="status" value="Approved" required class="form-radio text-indigo-600">
              <span class="ml-2">Approved</span>
            </label>
            <label class="inline-flex items-center ml-6">
              <input type="radio" name="status" value="Rejected" class="form-radio text-indigo-600">
              <span class="ml-2">Rejected</span>
            </label>
          </div>
        </div>
        <div class="mb-4">
          <label for="reason" class="block text-sm font-medium text-gray-700">Rejection Reason (required if rejected)</label>
          <textarea id="reason" name="reason" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Provide reason for rejection"></textarea>
        </div>
        <div class="flex justify-end">
          <button type="submit" class="bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700">Submit</button>
        </div>
      </form>
    </div>
    <a href="/api/dashboard/<%= user.userType === 'admin' ? 'admin' : 'agent' %>" class="mt-4 inline-block text-indigo-600 hover:underline">Back to Dashboard</a>
  </div>
  <script>
    // Client-side validation
    document.querySelector('form').addEventListener('submit', (e) => {
      const status = document.querySelector('input[name="status"]:checked');
      const reason = document.getElementById('reason').value.trim();
      if (!status) {
        e.preventDefault();
        alert('Please select an approval status');
      } else if (status.value === 'Rejected' && !reason) {
        e.preventDefault();
        alert('Rejection reason is required');
      }
    });
  </script>
</body>
</html>